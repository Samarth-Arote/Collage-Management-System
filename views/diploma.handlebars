<!-- diploma.handlebars -->
<!DOCTYPE html>
<html>
<head>
    <title>Diploma</title>
    <link rel="stylesheet" type="text/css" href="/diploma.css">
</head>
<body align="center">
    <div class="nav-links" >
            <ul>
                <li><a href="/" onclick="showSection('home')">Home</a></li>
                <li><a href="#about" onclick="showSection('about')">About</a></li>
                <li><a href="/course-form" onclick="showSection('course-form')">Courses</a></li>
                <li><a href="/student-form" onclick="showSection('blog')">Students</a></li>
                <li><a href="/contact" onclick="showSection('contact')">Contact</a></li>
            </ul>
        </div>
    <h1>Diploma</h1>
    <form action="/diploma/add" method="post">
        <div class="form-field">
            <label for="name">Course:</label><br>
            <input type="text" name="course" placeholder="Course" required>
            <br>
            <label for="name">Fees:</label><br>
            <input type="text" name="fees" placeholder="Fees" required>
            <br>
            <label for="name">Result:</label><br>
            <input type="text" name="result" placeholder="Result" required>
            <br>
            <label for="name">Name:</label><br>
            <input type="text" name="name" placeholder="Name" required>
            <br>
            <label for="name">Address:</label><br>
            <input type="text" name="address" placeholder="Address" required>
        </div>
        <div class="form-field">
            <button type="submit">Add</button>
        </div>
    </form>
    <br><br>
    <h1>Student Details</h1> <hr>  
        <div id="data-section">
        {{#each diplomas}}
        <div class="diploma-entry">
            <p>Course: {{course}}</p>
            <p>Fees: {{fees}}</p>
            <p>Result: {{result}}</p>
            <p>Name: {{name}}</p>
            <p>Address: {{address}}</p>
        </div>
        {{/each}}
    </div>

</body>
</html>
